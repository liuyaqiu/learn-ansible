{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "trailingComma": "none",
  "bracketSpacing": true,
  "singleQuote": false,
  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": false,
        "bracketSpacing": true,
        "proseWrap": "preserve"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "proseWrap": "preserve"
      }
    }
  ]
}
